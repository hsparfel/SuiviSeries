<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouillos.suiviseries">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icons8_camera"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icons8_camera"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AccueilActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EnregistrerSerieActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherSaisonActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEpisodeActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>